<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.icc.app.dao.NewsTypeMapper" >
  <resultMap id="BaseResultMap" type="org.icc.app.pojo.NewsType" >
    <id column="id" property="id" jdbcType="DECIMAL" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="enabled" property="enabled" jdbcType="DECIMAL" />
    <result column="is_subscribe" property="isSubscribe" jdbcType="DECIMAL" />
    <result column="create_date" property="createDate" jdbcType="VARCHAR" />
  </resultMap>
  
  <sql id="Example_Where_Clause" >
    <trim prefix="where" prefixOverrides="and|or" >
      <if test="condition.id != null" >
         and id = #{condition.id}
      </if>
      <if test="condition.titleLike != null" >
       <![CDATA[ and name LIKE CONCAT(CONCAT('%', #{condition.nameLike}), '%') ]]>
      </if>
    </trim>
  </sql>
  
  <sql id="Base_Column_List" >
    `id`,
    `name`,
	`enabled`,
	`is_subscribe`,
	`create_date`
  </sql>
  
  <sql id="Select_Column_List" >
    `id`,
	`name`,
	`enabled`,
	`is_subscribe` AS `isSubscribe`,
	DATE_FORMAT(`create_date`, '%m/%d/%Y %T') AS `createDate`
  </sql>
  
  <select id="selectByExample" resultMap="BaseResultMap" parameterType="org.icc.app.pojo.Criteria" >
    <include refid="common.MySQL_Pagination_Head" />
    select
    <if test="distinct" >
      distinct
    </if>
    <include refid="Base_Column_List" />
    from `tb_news_types`
    <if test="_parameter != null" >
      <include refid="Example_Where_Clause" />
    </if>
    <if test="orderByClause != null" >
      order by ${orderByClause}
    </if>
    <include refid="common.MySQL_Pagination_Tail" />
  </select>
  
  
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from `tb_news_types`
    where `id` = #{id}
  </select>
  
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from `tb_news_types` where `id` = #{id}
  </delete>
  
  <insert id="insert" parameterType="org.icc.app.pojo.News" >
    <selectKey resultType="java.lang.Integer" keyProperty="id" order="BEFORE" >
      select nextval('NewsType')
    </selectKey>
    insert into `tb_news_types` (
    	<include refid="Base_Column_List" />
    )
    values (
    #{id}, #{name}, #{enabled}, #{isSubscribe}, STR_TO_DATE(#{createDate}, '%m/%d/%Y %T')
    )
  </insert>
  
  <select id="countByExample" parameterType="org.icc.app.pojo.Criteria" resultType="java.lang.Integer" >
    select count(*) from `tb_news_types`
    <if test="_parameter != null" >
      <include refid="Example_Where_Clause" />
    </if>
  </select>
  
  <update id="updateByPrimaryKey" parameterType="org.icc.app.pojo.NewsType" >
    update `tb_news_types`
    set
    `name` = #{name},
	`enabled` = #{enabled},
	`is_subscribe` = #{isSubscribe}
    where `id` = #{id}
  </update>
  
    <select id="selectAll" resultType="org.icc.app.pojo.NewsType"> 
    	select
	    	<include refid="Select_Column_List" />
	    from `tb_news_types`
	</select> 

</mapper>
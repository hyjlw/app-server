    <include refid="Base_Column_List" />
    from `worships`
    where `id` = #{id}
  </select>
  
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from `worships` where `id` = #{id}
  </delete>
  
  <insert id="insert" parameterType="org.icc.app.pojo.Worship" >
    <selectKey resultType="java.lang.Integer" keyProperty="id" order="BEFORE" >
      select nextval('Worship')
    </selectKey>
    insert into `worships` (
    	<include refid="Base_Column_List" />
    )
    values (
    #{id}, #{name}, #{content}, #{remark}
    )
  </insert>
  
  <select id="countByExample" parameterType="org.icc.app.pojo.Criteria" resultType="java.lang.Integer" >
    select count(*) from `worships`
    <if test="_parameter != null" >
      <include refid="Example_Where_Clause" />
    </if>
  </select>
  
  <update id="updateByPrimaryKey" parameterType="org.icc.app.pojo.BaseModules" >
    update `worships`
    set `name` = #{name},
      `content` = #{content},
      `remark` = #{remark}
    where `id` = #{id}
  </update>
